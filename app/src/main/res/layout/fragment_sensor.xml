<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scorchers.ayini.Sensor">



    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="@string/moisture"
        android:textAlignment="center"
        android:typeface="serif"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="28sp"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <ProgressBar
            android:id="@+id/moisture"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable"
            android:secondaryProgress="0" />
        <ProgressBar
            android:id="@+id/pH"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:indeterminate="false"
            android:max="10"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable"
            android:secondaryProgress="0" />

    </LinearLayout>
    <TextView
        android:id="@+id/moisture_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="120dp"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="32sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/pH_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="238dp"
        android:layout_marginTop="120dp"
        android:text="0.0 pH"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="237dp"
        android:text="@string/fertility"
        android:typeface="serif"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="28sp"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp">
        <ProgressBar
            android:id="@+id/fertility"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progressbar_drawable"
            android:secondaryProgress="0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/cnc"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:indeterminate="false"
                android:max="100"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:progress="0"
                android:tag="CNC"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                android:secondaryProgress="0" />
            <ProgressBar
                android:id="@+id/macro_n"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:indeterminate="false"
                android:max="100"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:tag="Macro-N"
                android:progress="0"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                android:secondaryProgress="0" />
            <ProgressBar
                android:id="@+id/micro_n"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:indeterminate="false"
                android:max="100"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="-115dp"
                android:tag="Micro-N"
                android:progress="0"
                android:progressDrawable="@drawable/custom_progressbar_drawable"
                android:secondaryProgress="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEC"
                android:typeface="sans"
                android:layout_marginLeft="-92dp"
                android:layout_marginTop="48dp"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macro"
                android:layout_marginLeft="48dp"
                android:typeface="sans"
                android:layout_marginTop="48dp"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro"
                android:typeface="sans"
                android:layout_marginTop="117dp"
                android:layout_marginLeft="-80dp"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/fertility_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="350dp"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="237dp"
        android:text="@string/additional_monitoring"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <TextView
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:text="@string/acidity_p_h"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:typeface="serif" />

</FrameLayout>
